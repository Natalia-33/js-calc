{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<main>
  <section>
    <div class='form'>
      <h1 class='form__title'>Створити користувача</h1>
      <form method='Post' action='/user-create'>

        <div class='form__content'>
          <div class='form__field'>
            <label for='email' class='form__label'>Email
              адреса:</label>
            <input
              type='email'
              name='email'
              class='form__input'
            />
          </div>
          <div class='form__field'>
            <label
              for='login'
              class='form__label'
            >Нікнейм:</label>
            <input
              type='login'
              name='login'
              class='form__input'
            />
          </div>
          <div class='form__field'>
            <label
              for='password'
              name='password'
              class='form__label'
            >Пароль:</label>
            <input
              type='password'
              name='password'
              class='form__input'
            />
          </div>

          <button class='form__button'>Створити</button>
        </div>
      </form>
    </div>
  </section>

  <div class='form'>
    <h1 class='form__title'>Список користувачів</h1>
    <div class='user-list'>
      {{#with data.users}}
        {{#if isEmpty}}
          <mark>Пустий</mark>
        {{else}}
          <ul>
            {{#each list}}
              <li>{{email}}
                |
                {{login}} |{{id}}
                <a
                  href='/user-delete?id={{id}}'
                >(видалити)</a></li>
            {{/each}}
          </ul>

        {{/if}}
      {{/with}}
    </div>
  </div>
  </section>

  <section>
    <div class='form'>
      <h1 class='form__title'>Оновити пошту користувача</h1>
      <form method='Post' action='/user-update'>

        <div class='form__content'>

          <div class='form__field'>
            <label
              for='id'
              class='form__label'
            >ID</label>
            <input
              type='id'
              name='id'
              class='form__input'
            />
          </div>
          <div class='form__field'>
            <label for='email' class='form__label'>Нова Email
              адреса:</label>
            <input
              type='email'
              name='email'
              class='form__input'
            />
          </div>
         
          <div class='form__field'>
            <label
              for='password'
              name='password'
              class='form__label'
            >Пароль:</label>
            <input
              type='password'
              name='password'
              class='form__input'
            />
          </div>

          <button class='form__button'>Відправити</button>
        </div>
      </form>
    </div>
  </section>

  <section>
    <div class="product">
      <h1 class="product__title">Створення товару</h1>
      <product method="Post" action='/product-create'>
      <div class="product__card">
        <h2>Інформація про товар</h2>
        <div class="product__info">
        <label for="name" class="product__label">Назва товару</label>
        <input type="text" name="name" class="product__input">

          <label for="price" class="product__label">Ціна</label>
           <input type="price" name="price" class="product__input">
        </div>

        <div class="product__info"> 
          <label for="description" class="product__label">Короткий опис товару</label>
           <input type="description" name="description" class="product__input">
        </div>
        <button class="product__button">Створити товар</button>
      </div>
      </product>
    </div>
    
  </section>
</main>

